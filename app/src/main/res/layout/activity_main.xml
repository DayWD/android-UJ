<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEFE"
    android:backgroundTint="@color/black"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button26"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="@color/black"
        android:enabled="false"
        android:text=""
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_1"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:onClick="clickNumber"
        android:id="@+id/button_0"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="@color/black"
        android:text="@string/_0"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button24"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button26"
        app:layout_constraintTop_toBottomOf="@+id/button_2"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:onClick="clickNumber"
        android:backgroundTint="@color/black"
        android:id="@+id/button24"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/dot"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button25"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_0"
        app:layout_constraintTop_toBottomOf="@+id/button_3" />

    <Button
        android:onClick="doMath"
        android:backgroundTint="@color/orange"
        android:id="@+id/button25"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/equal_sign"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button24"
        app:layout_constraintTop_toBottomOf="@+id/button21" />

    <Button
        android:onClick="clickNumber"
        android:backgroundTint="@color/black"
        android:id="@+id/button_1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/_1"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button26"
        app:layout_constraintEnd_toStartOf="@+id/button_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_4" />

    <Button
        android:onClick="clickNumber"
        android:backgroundTint="@color/black"
        android:id="@+id/button_2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/_2"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_0"
        app:layout_constraintEnd_toStartOf="@+id/button_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_1"
        app:layout_constraintTop_toBottomOf="@+id/button_5" />

    <Button
        android:onClick="clickNumber"
        android:backgroundTint="@color/black"
        android:id="@+id/button_3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/_3"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button24"
        app:layout_constraintEnd_toStartOf="@+id/button21"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_2"
        app:layout_constraintTop_toBottomOf="@+id/button_6" />

    <Button
        android:onClick="clickOperator"
        android:backgroundTint="@color/black"
        android:id="@+id/button21"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/plus"
        android:textColor="@color/orange"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/button25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_3"
        app:layout_constraintTop_toBottomOf="@+id/button17" />

    <Button
        android:onClick="clickNumber"
        android:backgroundTint="@color/black"
        android:id="@+id/button_4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/_4"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_1"
        app:layout_constraintEnd_toStartOf="@+id/button_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_7" />

    <Button
        android:onClick="clickNumber"
        android:backgroundTint="@color/black"
        android:id="@+id/button_5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/_5"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_2"
        app:layout_constraintEnd_toStartOf="@+id/button_6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_4"
        app:layout_constraintTop_toBottomOf="@+id/button_8" />

    <Button
        android:onClick="clickNumber"
        android:backgroundTint="@color/black"
        android:id="@+id/button_6"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/_6"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_3"
        app:layout_constraintEnd_toStartOf="@+id/button17"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_5"
        app:layout_constraintTop_toBottomOf="@+id/button_9" />

    <Button
        android:onClick="clickOperator"
        android:backgroundTint="@color/black"
        android:id="@+id/button17"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/minus"
        android:textColor="@color/orange"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/button21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_6"
        app:layout_constraintTop_toBottomOf="@+id/button13" />

    <Button
        android:onClick="clickNumber"
        android:backgroundTint="@color/black"
        android:id="@+id/button_7"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/_7"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_4"
        app:layout_constraintEnd_toStartOf="@+id/button_8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:onClick="clickNumber"
        android:backgroundTint="@color/black"
        android:id="@+id/button_8"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/_8"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_5"
        app:layout_constraintEnd_toStartOf="@+id/button_9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_7"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:onClick="clickNumber"
        android:backgroundTint="@color/black"
        android:id="@+id/button_9"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/_9"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_6"
        app:layout_constraintEnd_toStartOf="@+id/button13"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_8"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:onClick="clickOperator"
        android:backgroundTint="@color/black"
        android:id="@+id/button13"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/multiply"
        android:textSize="45sp"
        android:textColor="@color/orange"
        app:layout_constraintBottom_toTopOf="@+id/button17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_9"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="@color/black"
        android:enabled="false"
        android:text=""
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_9"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/editDisplay"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:onClick="goUndo"
        android:backgroundTint="@color/black"
        android:id="@+id/button4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/undo"
        android:textColor="@color/orange"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_8"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/editDisplay"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:onClick="clickOperator"
        android:backgroundTint="@color/black"
        android:id="@+id/button5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/divide"
        android:textColor="@color/orange"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/button13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/editDisplay"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/editDisplay"
        android:layout_width="367dp"
        android:layout_height="95dp"
        android:layout_marginTop="210dp"
        android:backgroundTint="@android:color/darker_gray"
        android:ems="10"
        android:enabled="false"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/defaultDisplayText"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="number"
        android:labelFor="@id/editDisplay"
        android:importantForAutofill="no"   />

    <Button
        android:onClick="clickClear"
        android:backgroundTint="@color/black"
        android:id="@+id/button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/c"
        android:textColor="@color/orange"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_7"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDisplay"
        app:layout_constraintVertical_chainStyle="packed" />
</androidx.constraintlayout.widget.ConstraintLayout>
